<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityhellobutton"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interpolated Numbers"
            />
        <TextView
            android:id="@+id/myInterpolatedReadout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linear"
            />
        <TextView
            android:id="@+id/myLinearReadout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#"
            />


        <Button
            android:id="@+id/myButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="click me !"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|bottom"
        >


        <TextView
            android:id="@+id/myUpdateCountReadout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How many updates are called?"
            />
        <TextView
            android:id="@+id/myReachedEndReadout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="did we reach the last number?"
            />
    </LinearLayout>

</FrameLayout>
